{
  "rewrites": [
    {
      "source": "/slides/:name",
      "destination": "/slides/:name/index.html"
    },
    {
      "source": "/slides/:name/:slide",
      "destination": "/slides/:name/index.html"
    },
    {
      "source": "/slides/assets/:anything*",
      "destination": "/slides/assets/:anything*"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'unsafe-inline' 'unsafe-eval' 'self' *.ternent.dev *.concords.app;font-src fonts.gstatic.com;style-src 'unsafe-inline' 'self' *.ternent.dev *.concords.app fonts.googleapis.com; object-src 'none'; base-uri 'self'; img-src cdn.jsdelivr.net"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "same-origin"
        }
      ]
    }
  ]
}
