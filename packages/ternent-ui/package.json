    "luxon": "^3.5.0",
    "postcss": "^8.4.41",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.4.10",
    "tailwindcss-animate": "^1.0.7",
    "vite-plugin-dts": "^1.7.3",
    "vue": "^3.4.38"
